{
  "app_component": "com.android.settings/.Settings",
  "package": "com.android.settings",
  "allowed_packages": ["com.google.android.settings.intelligence"],
  "termination": {
    "must_contain_text": "VPN"
  },
  "plan_hints": [
    {
      "when_goal_contains_any": ["open settings", "settings"],
      "action": "open_app",
      "target": { "by": "component", "value": "com.android.settings/.Settings" }
    },
    {
      "when_goal_contains_any": ["search"],
      "prefer": [
        { "by": "content-desc", "value": "Search settings" },
        { "by": "text", "value": "Search settings" },
        { "by": "content-desc", "value": "Search" },
        { "by": "resource-id", "value": "com.android.settings:id/search" },
        { "by": "resource-id", "value": "com.android.settings:id/search_action_bar" },
        { "by": "resource-id", "value": "com.android.settings:id/menu_search" },
        { "by": "resource-id", "value": "com.android.settings:id/search_bar" },
        { "by": "resource-id", "value": "com.android.settings:id/search_bar_container" },
        { "by": "resource-id", "value": "androidx.appcompat:id/search_button" }
      ],
      "action": "tap"
    },
    {
      "when_goal_regex": "search (for )?(.+)",
      "action": "type",
      "target_prefer": [
        { "by": "resource-id", "value": "android:id/search_src_text" },
        { "by": "resource-id", "value": "com.android.settings:id/search_src_text" },
        { "by": "resource-id", "value": "com.android.settings:id/search_edit_text" },
        { "by": "resource-id", "value": "androidx.appcompat:id/search_src_text" }
      ],
      "args_from_regex_group": { "text": 2 }
    }
  ],
  "fallback_scroll_if_not_found": true,
  "fallback_scroll_args": { "direction": "down", "duration_ms": 600, "length_factor": 0.85 },
  "verify_after_action_text": "VPN"
}
